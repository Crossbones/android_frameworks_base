<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_dark_frame" >

    
        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notify_quicksettings" />

        <TextView
            android:id="@+id/tv_settings"
            android:text="@string/textview_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="3sp"
            android:paddingRight="3sp"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />
        

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quicksettings_wifi" />
            <TextView
                android:id="@+id/tv_wifi"
                android:text="@string/switch_wifi_text"
                android:textSize="17sp"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:gravity="center" />
            <Switch 
                android:id="@+id/switch_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </TableRow>

        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quicksettings_bluetooth" />
            <TextView
                android:id="@+id/tv_bluetooth"
                android:text="@string/switch_bluetooth_text"
                android:textSize="17sp"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:gravity="center" />
            <Switch
                android:id="@+id/switch_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </TableRow>

        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quicksettings_gps" />
            <TextView
                android:id="@+id/tv_gps"
                android:text="@string/switch_gps_text"
                android:textSize="17sp"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:gravity="center" />
            <Switch
                android:id="@+id/switch_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </TableRow>

        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quicksettings_account_sync" />
            <TextView
                android:id="@+id/tv_sync"
                android:text="@string/switch_sync_text"
                android:textSize="17sp"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:gravity="center" />
            <Switch
                android:id="@+id/switch_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </TableRow>

</TableLayout>
